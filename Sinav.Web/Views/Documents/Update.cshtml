@model Sinav.Entities.Concrete.Documents
<form method="post" asp-action="Update" asp-controller="Documents">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Döküman Seçiniz</h4>
                <div class="basic-form">
                    <div class="form-group">
                        <input type="file" class="form-control-file" name="Path" asp-for="Path">
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="IsVideo" value="true" asp-for="IsVideo">
                            <label class="form-check-label">Video Mu</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-dark">Güncelle</button>
                </div>
            </div>
        </div>
    </div>
</form>