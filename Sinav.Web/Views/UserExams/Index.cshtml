<form method="post" asp-action="Atama" asp-controller="UserExams">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sınav Atama</h4>
                    <div class="basic-form">
                        <div class="form-group ">
                            <label>Sınavlar</label>
                            <select id="quizzesID" class="form-control" name="quizzesID">
                                <option selected="selected">Sınavlar...</option>
                                @await Component.InvokeAsync("QuizzesList")
                            </select>
                        </div>
                        <div class="form-group ">
                            <label>User</label>
                            <select id="userID" class="form-control" name="userID">
                                <option selected="selected">Kullanıcılar...</option>
                                @await Component.InvokeAsync("UserList")
                            </select>
                        </div>
                        <button type="submit" class="btn btn-dark">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>